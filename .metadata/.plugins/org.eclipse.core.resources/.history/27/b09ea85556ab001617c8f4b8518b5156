package hw4;

public class Main {

	public static void main(String[] args) {
		int[] array1 = new int[10];
		add1(array1);
		print1(array1);
		println1(array1);
		int[] array2 = new int[10];
		add2(array2);
		print2f(array2);
		print2r(array2);
	}
	static void add1(int[] array){
		for (int i = 0; i < array.length; i++) {
			array[i] = (i + 1) * 2;
		}
	}
	static void print1(int[] array){
		for (int i = 0; i < array.length; i++) {
			System.out.print(array[i]+" ");
		}
		System.out.println();
	}
	static void println1(int[] array){
		for (int i = 0; i < array.length; i++) {
			System.out.println(array[i]);
		}
		System.out.println();
	}
	static void add2(int[] array){
		for (int i = 0; i < array.length; i++) {
			array[i] = (i + 1) * 2;
		}
	}
	static void print2f(int[] array){
		for (int i = 0; i < array.length; i++) {
			System.out.print(array[i]+" ");
		}
		System.out.println();
	}
	static void print2r(int[] array){
		for (int i = array.length; i > 0 ; i--) {
			System.out.print(array[i]+" ");
		}
		System.out.println();
	}
}
